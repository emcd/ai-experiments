{
  "mcpServers": {
    "pyright": {
      "command": "mcp-language-server",
      "args": [
        "--lsp", "pyright-langserver", "--workspace", ".",
        "--", "--stdio"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [ "-y", "@upstash/context7-mcp" ]
    },
    "librovore": {
      "command": "uvx",
      "args": [ "librovore", "serve" ]
    }
  }
}
